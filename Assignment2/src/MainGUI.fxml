<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<VBox id="scene" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="240.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainGUI">
   <children>
      <MenuBar nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="guide" mnemonicParsing="false" onAction="#guide" text="User Guide" />
                  <MenuItem fx:id="exit" mnemonicParsing="false" onAction="#exit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                  <MenuItem fx:id="theme" mnemonicParsing="false" onAction="#theme" text="Change Theme" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="about" mnemonicParsing="false" onAction="#about" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="startNewGame" contentDisplay="CENTER" mnemonicParsing="false" onAction="#startNewGame" text="Run a NEW GAME!!!" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="displayResultsForGames" mnemonicParsing="false" onAction="#displayResultsOfGames" text="Results">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="30.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="displayPointssForPerAthletes" mnemonicParsing="false" onAction="#displayResultsOfAthletes" text="Points">
                     <HBox.margin>
                        <Insets bottom="10.0" right="30.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="exitGame" mnemonicParsing="false" onAction="#exitGame" text="Exit">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
